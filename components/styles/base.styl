body
  font-family -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', STHeiti, 'Microsoft Yahei', Tahoma, Simsun, sans-serif
  line-height 1.4
  touch-action manipulation
  -webkit-tap-highlight-color transparent
  -webkit-font-smoothing antialiased
  margin 0
  padding 0
  background-color #FFF
  overflow-x hidden
/* <路由动画> */
.router-view-root
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  width 100%
  height 100%
  overflow-x hidden
  overflow-y auto
  -webkit-overflow-scrolling touch
  will-change transform, opacity
  transition  transform .4s cubic-bezier(.15, 0, .28, 1)
.slide-left-leave-to
.slide-right-enter
  transform translate3d(-100%, 0 ,0)
  opacity .1
.slide-left-enter
.slide-right-leave-to
  transform translate3d(100%, 0 ,0)
  opacity .1
/* </路由动画> */

/* 2行溢出 */
.ellipsis2
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow : hidden !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

/* flex */
.flex
  display: flex
.center-flex
  display: flex
  justify-content: center
  align-items: center
.center-flex-v
  display: flex
  align-items: center
.flex-full
  flex: 1


/* markdown */
code:not(.hljs)
  background-color: #fff5f5;
  color: #ff502c;
  font-size: .87em;
  padding: .065em .4em;

a:not(.header-anchor)
  color: #0269c8 !important;
  border-bottom: 1px solid #d1e9ff;

#hidden
  display: none
span.bash
  opacity .5
blockquote
  border-left: .25em solid #dfe2e5
  color: #6a737d
  padding: 0 1em
  margin-left: 0
ul li
